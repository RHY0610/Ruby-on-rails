
<h1>Listing Articles</h1>

<%= link_to 'New article', new_article_path, class: "btn btn-dark" %><br><br>
<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: "badge badge-primary" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: "badge badge-warning" %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              class: "badge badge-danger",
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>